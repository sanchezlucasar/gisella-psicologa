---
const WHATSAPP =
    "https://wa.me/5493510000000?text=" +
    encodeURIComponent("Hola, me gustaría coordinar una primera consulta.");
---

<section id="inicio" class="py-16 blob-bg">
    <div class="max-w-6xl mx-auto px-4 grid md:grid-cols-2 gap-10 items-center">
        <div class="reveal">
            <h1 class="text-4xl md:text-5xl font-extrabold leading-tight">
                Acompañamiento psicológico <span
                    style="color:var(--primary-700)">online</span
                > y humano
            </h1>
            <p class="mt-4 text-lg text-slate-600">
                Espacio de escucha y trabajo clínico para jóvenes y adultos.
                Modalidad virtual, confidencial y cercana.
            </p>
            <div class="mt-6 flex gap-3">
                <a
                    href={WHATSAPP}
                    target="_blank"
                    rel="noopener"
                    class="btn-primary whatsapp">Agenda por WhatsApp</a
                >
                <a
                    href={`${import.meta.env.BASE_URL}#servicios`}
                    class="btn-ghost">Ver servicios</a
                >
            </div>
        </div>

        <div class="flex justify-center reveal">
            <div
                class="rounded-full p-1 bg-white shadow ring-1 ring-[var(--accent)]"
            >
                <img
                    src={`${import.meta.env.BASE_URL}images/foto-perfil.webp`}
                    alt="Psicóloga clínica"
                    class="h-64 w-64 md:h-80 md:w-80 rounded-full object-cover"
                    loading="lazy"
                />
            </div>
        </div>
    </div>
</section>

<script is:raw>
    (() => {
        const obs = new IntersectionObserver(
            (es) =>
                es.forEach(
                    (e) => e.isIntersecting && e.target.classList.add("in"),
                ),
            { threshold: 0.12 },
        );
        document
            .querySelectorAll("#inicio .reveal")
            .forEach((el) => obs.observe(el));
    })();
</script>
